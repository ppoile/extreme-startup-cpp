
import testing ;

lib pthread : : <name>pthread ;
lib dl : : <name>dl ;

alias all : server-test server ;

project extreme-startup
  : build-dir build
  ;

build-project googlemock ;
build-project mongoose ;
build-project handler ;

unit-test server-test
  : [ glob test/*.cc ]
  : <library>/extreme-startup//handler
    <library>/extreme-startup//googlemock
    <library>/extreme-startup//pthread
  ;

exe server
  : main/main.cc
  : <library>/extreme-startup//handler
    <library>/extreme-startup//mongoose
  ;

